<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clipChildren="false"
    android:orientation="horizontal">

    <com.codehunterz.isail.view.neumorphism.NeumorphCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <com.codehunterz.isail.view.neumorphism.NeumorphCardView
            android:layout_height="wrap_content"
            app:neumorph_shapeType="pressed"
            android:layout_gravity="start"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginTop="97dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:layout_width="wrap_content">
            <ImageView
                android:id="@+id/iconType"
                android:scaleType="centerCrop"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/anchorage"
                tools:ignore="ContentDescription,RtlSymmetry"/>
        </com.codehunterz.isail.view.neumorphism.NeumorphCardView>


        <TextView
            android:id="@+id/placeName"
            android:transitionName="placeName_transition"
            android:text="REMA 1000 Sandvika"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,UnusedAttribute">
        </TextView>

        <View
            android:layout_marginTop="85dp"
            android:layout_width="match_parent"
            android:layout_height="0.65dp"
            android:background="@android:color/darker_gray"/>

        <com.codehunterz.isail.view.neumorphism.NeumorphCardView
            android:id="@+id/list_icons"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="pressed"
            android:layout_marginBottom="50dp"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:paddingEnd="2dp"
            android:paddingStart="12dp">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                tools:ignore="ContentDescription,RtlSymmetry"/>
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1.5dp"
                android:paddingStart="22dp"
                android:paddingLeft="22dp"
                android:src="@drawable/ic_map_pin"
                tools:ignore="ContentDescription,RtlSymmetry"/>
        </com.codehunterz.isail.view.neumorphism.NeumorphCardView>


    </com.codehunterz.isail.view.neumorphism.NeumorphCardView>

</LinearLayout>
